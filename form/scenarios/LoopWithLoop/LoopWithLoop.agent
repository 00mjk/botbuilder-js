<Agent xmlns="http://schemas.microsoft.com/ConversationalAgent/1.0">
  <AgentDefinition lang="en-us">
    <About>
      <CodeBehindClass>AppLogic</CodeBehindClass>
      <CodeBehindNamespace>MyConversation</CodeBehindNamespace>
    </About>
    <Task name="Hello Task">
      <Entity name="a" src="PhraseList"></Entity>
      <CodeRecognizer onRun="hi"></CodeRecognizer>
      <DialogFlow name="Looper" isRootFlow="true">
        <Transitions initialState="Feedback 0">
          <Transition to="Decision 1" from="Feedback 0"></Transition>

          <Transition to="Decision 2" from="Decision 1" whenValueIs="Yes"></Transition>
          <Transition to="Return"     from="Decision 1" whenValueIs="Maybe"></Transition>
          <Transition to="Feedback 1" from="Decision 1" whenValueIs="No"></Transition>
          <Transition to="Decision 1" from="Feedback 1"></Transition>

          <Transition to="Feedback 0" from="Decision 2" whenValueIs="Yes"></Transition>
          <Transition to="Feedback 2" from="Decision 2" whenValueIs="No"></Transition>
          <Transition to="Decision 2" from="Feedback 2"></Transition>
        </Transitions>
        <Initial name="Start"></Initial>
        <Return name="Return" outcome="Success"></Return>

        <Process name="Decision 1" onRun="decision1"></Process>
        <Process name="Decision 2" onRun="decision2"></Process>

        <Respond name="Feedback 0">
          <Feedback>This is feedback 0</Feedback>
        </Respond>
        <Respond name="Feedback 1">
          <Feedback>This is feedback 1</Feedback>
        </Respond>
        <Respond name="Feedback 2">
          <Feedback>This is feedback 2</Feedback>
        </Respond>
      </DialogFlow>
    </Task>
    <PhraseTopic name="a" scenario="Dictation"></PhraseTopic>
  </AgentDefinition>
</Agent>
