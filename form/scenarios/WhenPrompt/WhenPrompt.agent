<Agent xmlns="http://schemas.microsoft.com/ConversationalAgent/1.0">
  <AgentDefinition lang="en-us">
    <About>
      <CodeBehindClass>SinglePromptSingleFeedbackAppLogic</CodeBehindClass>
      <CodeBehindNamespace>AgentConsole.Agent</CodeBehindNamespace>
    </About>
    <Task name="task1">
      <CodeRecognizer onRun="hi"></CodeRecognizer>
      <DialogFlow name="Dialog Flow" isRootFlow="true">
        <Transitions initialState="Prompt1">
          <Transition to="Prompt1" from="Start"></Transition>
          <Transition to="Prompt2" from="Prompt1"></Transition>
          <Transition to="Feedback" from="Prompt2"></Transition>
          <Transition to="Return" from="Feedback"></Transition>
        </Transitions>
        <Initial name="Start"></Initial>
        <Prompt name="Prompt1">
            <Feedback>type a value for x</Feedback>
          <CodeRecognizer onRun="recognize_entity_x"></CodeRecognizer>
          <EntityRef name="x" promptIfMissing="true"></EntityRef>
        </Prompt>
        <Prompt name="Prompt2" promptWhen="funcPromptWhen">
          <Feedback>type a value for y</Feedback>
          <CodeRecognizer onRun="recognize_entity_y"></CodeRecognizer>
          <EntityRef name="y" promptIfMissing="true"></EntityRef>
        </Prompt>
        <Respond name="Feedback">
          <Feedback>I have values {x} and {y}</Feedback>
        </Respond>
        <Return name="Return" outcome="Success"></Return>
      </DialogFlow>
    </Task>
  </AgentDefinition>
</Agent>
