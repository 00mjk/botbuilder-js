<Agent xmlns:Agent="http://schemas.microsoft.com/ConversationalAgent/1.0">
  <AgentDefinition lang="en-us">
    <ConditionalResponseTemplate name="Conditional" onRun="func">
      <SwitchCase>
        <Case value="1">
          <FeedbackPerModality>
            <Display>Display Red</Display>
            <Speak>Speak Red</Speak>
          </FeedbackPerModality>
        </Case>
        <Case value="2">
          <FeedbackPerModality>
            <Display>Display Green</Display>
            <Speak>Speak Green</Speak>
          </FeedbackPerModality>
        </Case>
        <Case value="3">
          <FeedbackPerModality>
            <Display>Display Blue</Display>
            <Speak>Speak Blue</Speak>
          </FeedbackPerModality>
        </Case>
      </SwitchCase>
    </ConditionalResponseTemplate>
  </AgentDefinition>
</Agent>
