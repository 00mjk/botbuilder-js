<Agent xmlns:Agent="http://schemas.microsoft.com/ConversationalAgent/1.0">
  <AgentDefinition lang="en-us">
    <ConditionalResponseTemplate name="Conditional" onRun="func">
      <SwitchCase>
        <Case value="1">
          <Feedback>Red</Feedback>
        </Case>
        <Case value="2">
          <Feedback>Green</Feedback>
        </Case>
        <Case value="3">
          <Feedback>Blue</Feedback>
        </Case>
      </SwitchCase>
    </ConditionalResponseTemplate>
  </AgentDefinition>
</Agent>
