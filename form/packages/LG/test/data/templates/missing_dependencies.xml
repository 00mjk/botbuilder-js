<Agent xmlns:Agent="http://schemas.microsoft.com/ConversationalAgent/1.0">
  <AgentDefinition lang="en-us">
    <ConditionalResponseTemplate name="Conditional1" onRun="func1">
      <SwitchCase>
        <Case value="small">
          <Feedback>{a} is a small string [Conditional2]</Feedback>
        </Case>
        <Case value="medium">
          <Feedback>{a} is a medium sized string [SimpleResponse0] [Conditional2]</Feedback>
        </Case>
        <Case value="large">
          <Feedback>{a} is a large string [SimpleResponse0] [Conditional2]</Feedback>
        </Case>
      </SwitchCase>
    </ConditionalResponseTemplate>
    <ConditionalResponseTemplate name="Conditional2" onRun="func2">
      <SwitchCase>
        <Case value="1">
          <Feedback>Red</Feedback>
        </Case>
        <Case value="2">
          <Feedback>Green</Feedback>
        </Case>
        <Case value="3">
          <Feedback>Blue</Feedback>
        </Case>
      </SwitchCase>
    </ConditionalResponseTemplate>
    <SimpleResponseTemplate name="SimpleResponse2">
      <Feedback>c</Feedback>
    </SimpleResponseTemplate>
    <SimpleResponseTemplate name="SimpleResponse1">
      <Feedback>b [Simple-Missing]</Feedback>
    </SimpleResponseTemplate>
    <SimpleResponseTemplate name="SimpleResponse0">
      <Feedback>a [SimpleResponse1]</Feedback>
    </SimpleResponseTemplate>
  </AgentDefinition>
</Agent>
