<Agent xmlns:Agent="http://schemas.microsoft.com/ConversationalAgent/1.0">
  <AgentDefinition lang="en-us">

    <ConditionalResponseTemplate name="Conditional" onRun="func">
      <SwitchCase>
        <Case value="1">
          <Feedback>[R] [R_alias]</Feedback>
        </Case>
        <Case value="2">
          <FeedbackPerModality>
            <Display>[G]</Display>
            <Speak>[G] [G]</Speak>
          </FeedbackPerModality>
        </Case>
        <Case value="3">
          <Feedback>[B] [B]</Feedback>
        </Case>
        <Case value="4">
          <Feedback>[R]</Feedback>
        </Case>
      </SwitchCase>
    </ConditionalResponseTemplate>
    
    <SimpleResponseTemplate name="R">
      <FeedbackOneOf>
        <Feedback>[Red_1_2]</Feedback>
        <Feedback>[Red_3_4]</Feedback>
      </FeedbackOneOf>
    </SimpleResponseTemplate>
    
    <SimpleResponseTemplate name="R_alias">
      <Feedback>[R]</Feedback>
    </SimpleResponseTemplate>

    <SimpleResponseTemplate name="G">
      <Feedback>[Gr][een]</Feedback>
    </SimpleResponseTemplate>
    
    <SimpleResponseTemplate name="B">
      <Feedback>[Blue]</Feedback>
    </SimpleResponseTemplate>

    <SimpleResponseTemplate name="All">
      <Feedback>[R] [G] [B] [Red_1_2] [Red_3_4] [R_alias]</Feedback>
    </SimpleResponseTemplate>
    
    <SimpleResponseTemplate name="Red_1_2">
      <FeedbackOneOf>
        <Feedback>red 1</Feedback>
        <Feedback>red 2</Feedback>
      </FeedbackOneOf>
    </SimpleResponseTemplate>
    
    <SimpleResponseTemplate name="Red_3_4">
      <FeedbackOneOf>
        <Feedback>red 3</Feedback>
        <Feedback>red 4</Feedback>
      </FeedbackOneOf>
    </SimpleResponseTemplate>
    
    <SimpleResponseTemplate name="Gr">
      <Feedback>gr</Feedback>
    </SimpleResponseTemplate>

    <SimpleResponseTemplate name="een">
      <Feedback>een</Feedback>
    </SimpleResponseTemplate>
    
    <SimpleResponseTemplate name="Blue">
      <Feedback>blue</Feedback>
    </SimpleResponseTemplate>

  </AgentDefinition>
</Agent>
